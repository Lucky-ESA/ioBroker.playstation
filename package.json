{
    "name": "iobroker.playstation",
    "version": "0.0.1",
    "description": "PS remote control",
    "author": {
        "name": "Lucky-ESA",
        "email": "github@luckyskills.de"
    },
    "homepage": "https://github.com/Lucky-ESA/ioBroker.playstation",
    "license": "MIT",
    "keywords": [
